{
  "manifest_version": 3,
  "name": "Google Scholar Summarizer",
  "version": "1.0",
  "description": "Summarizes Google Scholar search results using GPT-4",
  "permissions": [
    "activeTab",
    "scripting",
    "https://scholar.google.com/*",
    "http://127.0.0.1:5000/*"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://scholar.google.com/scholar*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}